<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:id="@+id/bd_layout_search_bar"
             android:layout_width="match_parent"
             android:layout_height="52dp"
             android:paddingBottom="6dp"
             android:paddingEnd="@dimen/sizePaddingNormal"
             android:paddingStart="@dimen/sizePaddingNormal"
             android:paddingTop="6dp">

    <TextView
        android:id="@+id/bd_tv_searchview"
        style="@style/BD.AppTheme.TextView.SingleLine"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_gravity="center"
        android:background="@drawable/bd_shape_search_view_background"
        android:gravity="center_vertical"
        android:hint="@string/bd_hint_search"
        android:paddingLeft="@dimen/sizePaddingNormal"
        android:paddingRight="@dimen/sizePaddingNormal"
        android:textAppearance="?android:textAppearanceSmall"
        android:textColor="#333"
        android:textColorHint="#888"/>
</FrameLayout>